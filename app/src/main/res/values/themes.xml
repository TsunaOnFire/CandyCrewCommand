<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CandyCrewCommand" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">@color/strong_light_blue</item>
        <item name="colorOnPrimary">@color/blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/strong_light_blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.LightItalic" parent="Text">
        <item name="android:fontFamily">@font/roboto_thinitalic</item>
    </style>

    <style name="Text.Regular" parent="Text">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text.Bold" parent="Text">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="sectionProfile" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/accent_color_borders</item>
    </style>

    <style name="dynamicIcon"  parent="">
        <item name="android:background">@color/accent_color_borders</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="background">@drawable/bg_section</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeBottomRight">10dp</item>
        <item name="cornerSizeBottomLeft">50%</item>
    </style>

    <style name="CustomRadioButton" parent="@style/Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:background">@drawable/bg_radio_button</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>
</resources>