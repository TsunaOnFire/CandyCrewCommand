                            app:layout_constraintEnd_toStartOf="@+id/worker_detail_limit_image_description"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@mipmap/ic_description" />

                        <TextView
                            android:id="@+id/worker_detail_label_description_title"
                            style="@style/Text.Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/description"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@+id/worker_detail_image_description"
                            app:layout_constraintStart_toEndOf="@+id/worker_detail_image_description"
                            app:layout_constraintTop_toTopOf="@+id/worker_detail_image_description" />

                        <View
                            android:id="@+id/worker_detail_divider_description"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/accent_color_borders"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/worker_detail_image_description" />

                        <LinearLayout
                            android:id="@+id/worker_detail_content_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/worker_detail_divider_description">

                            <TextView
                                android:id="@+id/worker_detail_label_description"
                                style="@style/Text.Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin euismod risus non risus pretium, id hendrerit sapien consequat. Cras vitae sapien elit. Nunc ultricies pretium condimentum. Aliquam tincidunt erat eget fermentum interdum. Nam facilisis posuere condimentum. Phasellus quis urna lectus. Etiam eget metus vitae augue condimentum mollis ut vitae lectus. Praesent quis enim in urna pulvinar laoreet eu vitae nunc. Nam pretium ex nec eros vehicula hendrerit. Phasellus sit amet libero molestie, fermentum ante in, elementum ante. Curabitur quis justo ut nisl rutrum tristique." />
                        </LinearLayout>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/worker_detail_limit_image_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.15" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/worker_detail_limit_explandable_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.9" />

                        <View
                            android:id="@+id/worker_detail_description_explandable_e1"
                            style="@style/dynamicIcon"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintBottom_toBottomOf="@+id/worker_detail_image_description"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/worker_detail_limit_explandable_description"
                            app:layout_constraintTop_toTopOf="@+id/worker_detail_image_description" />


                        
                        <View
                            android:id="@+id/worker_detail_description_explandable_e2"
                            style="@style/dynamicIcon"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintBottom_toBottomOf="@+id/worker_detail_image_description"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/worker_detail_limit_explandable_description"
                            app:layout_constraintTop_toTopOf="@+id/worker_detail_image_description" />

                        <View
                            android:id="@+id/worker_detail_description_button_expand"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintBottom_toBottomOf="@+id/worker_detail_image_description"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/worker_detail_limit_explandable_description"
                            app:layout_constraintTop_toTopOf="@+id/worker_detail_image_description" />

                    </androidx.constraintlayout.motion.widget.MotionLayout>

