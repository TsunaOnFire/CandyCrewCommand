<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.aph.willywonka.ui.view.DetailActivity">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/worker_detail_layout_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/worker_detail_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/worker_detail_header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/worker_detail_image_cicle_background"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:elevation="6dp"
                        app:layout_constraintBottom_toTopOf="@+id/worker_detail_aux_limit"
                        app:layout_constraintDimensionRatio="w,1:1"
                        app:layout_constraintEnd_toStartOf="@+id/guideline2"
                        app:layout_constraintStart_toStartOf="@+id/guideline4"
                        app:shapeAppearanceOverlay="@style/roundedImageView"
                        app:srcCompat="@drawable/bg_corner" />

                    <TextView
                        android:id="@+id/worker_detail_label_name"
                        style="@style/Text.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:elevation="6dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Fist Name Last Name" />

                    <TextView
                        android:id="@+id/worker_detail_label_profession"
                        style="@style/Text.Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="6dp"
                        android:textColor="@color/accent_text_color"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/worker_detail_label_name"
                        tools:text="Profession" />

                    <ImageButton
                        android:id="@+id/worker_detail_button_close"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@null"
                        android:elevation="6dp"
                        android:padding="8dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="?attr/actionModeCloseDrawable" />

                    <ImageView
                        android:id="@+id/worker_detail_image_gender_icon"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:elevation="6dp"
                        app:layout_constraintBottom_toBottomOf="@+id/worker_detail_label_name"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/worker_detail_label_name"
                        app:layout_constraintTop_toTopOf="@+id/worker_detail_label_name"
                        tools:srcCompat="@mipmap/ic_male" />

                    <View
                        android:id="@+id/worker_detail_aux_limit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/worker_detail_image"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/worker_detail_image" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="1.2" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="-0.2" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/worker_detail_image"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        android:elevation="6dp"
                        android:padding="8dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintDimensionRatio="w,1:1"
                        app:layout_constraintEnd_toStartOf="@+id/worker_detail_header_vguide_end"
                        app:layout_constraintStart_toStartOf="@+id/worker_detail_header_vguide_start"
                        app:layout_constraintTop_toBottomOf="@+id/worker_detail_label_profession"
                        app:shapeAppearanceOverlay="@style/roundedImageView"
                        tools:srcCompat="@tools:sample/avatars" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/worker_detail_header_vguide_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.3" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/worker_detail_header_vguide_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.70" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/worker_detail_content_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.constraintlayout.motion.widget.MotionLayout
                        android:id="@+id/worker_detail_motion_layout_about_me"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginVertical="10dp"
                        android:background="@drawable/bg_section"
                        android:elevation="4dp"
                        app:layoutDescription="@xml/activity_detail_xml_worker_detail_motion_layout_about_me_scene"
                        app:shapeAppearanceOverlay="@style/sectionProfile">

                        <ImageView
                            android:id="@+id/worker_detail_image_about_me"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="2dp"
                            android:padding="5dp"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintEnd_toStartOf="@+id/worker_detail_limit_image_about_me"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@mipmap/ic_aboutme" />

                        <TextView
                            android:id="@+id/worker_detail_label_about_me_title"
                            style="@style/Text.Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/about_me"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="@+id/worker_detail_image_about_me"
                            app:layout_constraintStart_toEndOf="@+id/worker_detail_image_about_me"
                            app:layout_constraintTop_toTopOf="@+id/worker_detail_image_about_me" />

                        <View
                            android:id="@+id/worker_detail_divider_about_me"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/accent_color_borders"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/worker_detail_image_about_me" />

                        <LinearLayout
                            android:id="@+id/worker_detail_content_about_me"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/worker_detail_divider_about_me">

                            <TextView
                                android:id="@+id/worker_detail_label_email"
                                style="@style/Text.Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                tools:text="email@domain.com" />

                            <TextView
                                android:id="@+id/worker_detail_label_country"
                                style="@style/Text.Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                tools:text="From: Loompaland" />

                            <TextView
                                android:id="@+id/worker_detail_label_age"
                                style="@style/Text.Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                tools:text="21 y/o" />

                            <TextView
                                android:id="@+id/worker_detail_label_heigh"
                                style="@style/Text.Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                tools:text="96 cm " />

                        </LinearLayout>

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/worker_detail_limit_image_about_me"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.15" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/worker_detail_limit_explandable_about_me"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.9" />

                        <View
                            android:id="@+id/worker_detail_about_me_explandable_e1"
                            style="@style/dynamicIcon"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintBottom_toBottomOf="@+id/worker_detail_image_about_me"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/worker_detail_limit_explandable_about_me"
                            app:layout_constraintTop_toTopOf="@+id/worker_detail_image_about_me" />

                        <View
                            android:id="@+id/worker_detail_about_me_explandable_e2"
                            style="@style/dynamicIcon"
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintBottom_toBottomOf="@+id/worker_detail_image_about_me"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/worker_detail_limit_explandable_about_me"
                            app:layout_constraintTop_toTopOf="@+id/worker_detail_image_about_me" />

                        <View
                            android:id="@+id/worker_detail_about_me_button_expand"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintBottom_toBottomOf="@+id/worker_detail_image_about_me"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/worker_detail_limit_explandable_about_me"
                            app:layout_constraintTop_toTopOf="@+id/worker_detail_image_about_me" />

                    </androidx.constraintlayout.motion.widget.MotionLayout>

                    <androidx.constraintlayout.motion.widget.MotionLayout
                        android:id="@+id/worker_detail_motion_layout_description"
